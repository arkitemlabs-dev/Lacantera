rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar acceso a empresa
    function hasEmpresaAccess(empresaId) {
      return exists(/databases/$(database)/documents/usuarioEmpresas/$(request.auth.uid + '_' + empresaId)) &&
             get(/databases/$(database)/documents/usuarioEmpresas/$(request.auth.uid + '_' + empresaId)).data.activo == true;
    }
    
    // Usuarios - solo pueden acceder a su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Empresas - solo lectura para usuarios autenticados
    match /empresas/{empresaId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role == 'admin_super';
    }
    
    // Usuario-Empresa relaciones
    match /usuarioEmpresas/{docId} {
      allow read: if request.auth != null && 
                     (resource.data.usuarioId == request.auth.uid || 
                      request.auth.token.role == 'admin_super');
      allow write: if request.auth != null && request.auth.token.role == 'admin_super';
    }
    
    // Proveedores - filtrados por empresa
    match /proveedores/{providerId} {
      allow read, write: if request.auth != null && 
                           hasEmpresaAccess(resource.data.empresaId);
    }
    
    // Facturas - filtradas por empresa
    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null && 
                           hasEmpresaAccess(resource.data.empresaId);
    }
    
    // Órdenes de compra - filtradas por empresa
    match /purchaseOrders/{orderId} {
      allow read, write: if request.auth != null && 
                           hasEmpresaAccess(resource.data.empresaId);
    }
    
    // Pagos - filtrados por empresa
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
                           hasEmpresaAccess(resource.data.empresaId);
    }
    
    // ⚠️ REGLA TEMPORAL PARA DESARROLLO - REMOVER EN PRODUCCIÓN
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
